@import '../../../stylus/base/**'

.aside
  animation 1.5s entry_content
  background #fff
  border 1px solid #ccc
  border-radius 3px
  box-shadow 0 2px 5px rgba(0,0,0,.2)
  margin 10px
  transition .3s all
  &:hover
    box-shadow 0 0 0 1px rgba(#fff,.5), 0 5px 10px rgba(0,0,0,.3)
  article
    border-bottom 1px solid #ccc
  +tablet()
    float left
    left 0
    position fixed
    width 30%
  +desktop()
    width 20%
.profile
  text-align center
  h1
    font-size 1.1em
    margin-bottom 10px
  h2
    font-size .8em
    font-weight normal
    margin-bottom 20px
.profile__photo
  background url('https://media.licdn.com/dms/image/C4E16AQEErtRK0eF39w/profile-displaybackgroundimage-shrink_350_1400/0?e=1543449600&v=beta&t=g2NokBwNGEeF36icwqDVXUUbRZ3H3KRt06Z7yHRPNOU') center no-repeat
  background-size cover
  box-sizing border-box
  display block
  height 70px
  margin 0
  margin-bottom 40px
  position relative
  width 100%
  &:hover
    animation 3s profile_cover infinite alternate
    img
      transform scale(1.2)
      animation 1.5s profile infinite alternate
  img
    border 2px solid #fff
    border-radius 100%
    box-shadow inset 0 1.5px 3px 0 rgba(0,0,0,.15), 0 1.5px 3px 0 rgba(0,0,0,.15)
    left calc(50% - 30px)
    position absolute
    top 50%
    transition .3s all
.connections
  font-size .9em
  padding 20px
  h1
    color #666
    font-weight bold
    margin-bottom 10px
    span
      color color2
      float right
  p
    color #333
    font-weight bold
.premium
  cursor pointer
  font-size .8em
  padding 20px
  text-align center
  transition .3s all
  user-select none
  &:hover
    background #c8b476 + 50
    p
      color #b29a53 - 100
      text-shadow 0 1px 2px #fff
      transform scale(1.3)
      &:before
        transform rotate(90deg)
  h1
    font-weight normal
    margin-bottom 10px
  p
    display inline-block
    font-weight bold
    position relative
    transition .3s all
    &:before
      background linear-gradient(-135deg, #c8b476 50%, #b29a53 50%)
      content ''
      display block
      height 10px
      left -20px
      position absolute
      transition .3s all
      width 10px
