@import '../../../stylus/base/**'

.job
  background #fff
  border 1px solid #ccc
  padding 10px
  margin 10px
  box-shadow 0 2px 5px rgba(0,0,0,.2)
  transition .3s all
  &:hover
    box-shadow 0 0 0 1px rgba(#fff,.5), 0 5px 10px rgba(0,0,0,.3)
.job__photo
  margin 0
  &:after
    content ''
    clear both
    display table
  h1
    margin-bottom 10px
  h2
    font-size .8em
    color #666
  img, h2
    float left
  img
    margin-right 10px
