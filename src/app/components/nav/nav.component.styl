@import '../../../stylus/base/**'

.btn.menu
  background transparent
  border 0
  cursor pointer
  height 60px
  outline none
  position absolute
  right 0
  top 0
  transition .3s all
  width 60px
  &:focus,
  &:hover
    transform rotate(90deg) translateY(20px)
  svg
    fill #fff

.nav
  background color1
  border-radius 0 0 6px 6px
  box-shadow 0 1px 0 .5px rgba(#fff, .5), 0 6px 10px rgba(#000, .2)
  display block
  margin 0
  padding 0
  position absolute
  right 0
  top 60px
  +tablet()
    border-radius 0
    box-shadow none
    display inline-block
    float right
    position relative
    right 70px
    top -15px
.nav__item
  color #fff
  display block
  opacity .8
  padding 9px 13px
  text-align center
  text-decoration none
  transition .3s all
  +tablet()
    display inline-block
  &:hover,
  &:focus,
  &:active
    box-shadow inset 0 -3px 0 #fff
    opacity 1
    .profile
      box-shadow 0 0 0 1px color1, 0 0 10px 1px #fff
    svg
      transform scale(1.15)
    .active-item
      fill #fff
  svg
    margin-bottom 5px
  span
    display block
    font-size .8em
  .active-item
    fill color1
    transition .3s all
  .profile
    border 1px solid #fff
    border-radius 100%
    margin-bottom 5px
    transform translateY(5px)
    transition .3s all
.nav__icon
  display block
  fill #fff
  transition .3s all
