.profile
  text-align center
  &.big
    h1
      font-size 3em
      margin-top 10px
    .profile__photo
      height 300px
      border-radius 5px
      margin-bottom 60px
      img
        width 150px
        animation none
        left calc(50% - 75px)
        top 60%
  h1
    font-size 1.1em
    margin-bottom 10px
  h2
    font-size .8em
    font-weight normal
    margin-bottom 20px
.profile__photo
  background url('/assets/arte.jpg') center no-repeat
  background-size cover
  box-sizing border-box
  display block
  height 70px
  margin 0
  margin-bottom 40px
  position relative
  width 100%
  &:hover
    animation 3s profile_cover infinite alternate
    img
      transform scale(1.2)
      animation 1.5s profile infinite alternate
  img
    border 4px solid rgba(243,246,248,.94)
    border-radius 100%
    box-shadow inset 0 1.5px 3px 0 rgba(0,0,0,.15), 0 1.5px 3px 0 rgba(0,0,0,.15)
    left calc(50% - 30px)
    position absolute
    top 50%
    transition .3s all
