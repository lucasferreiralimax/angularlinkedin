@import '../../../stylus/base/**'

.search
  float left
  margin 0
  padding 0
  position relative
.search__input
  border 0
  border-radius 4px
  box-sizing border-box
  display block
  float left
  margin 0
  outline none
  padding 10px
  padding-left 35px
  transition .3s all
  width 100px
  &:focus
    padding-left 10px
    padding-right 40px
    width 200px
    + .search__btn
      background rgba(color2, .2)
      border-radius 0 6px 6px 0
      left auto
      opacity 1
      pointer-events all
      right 0
      svg
        fill color2
.search__btn
  background transparent
  border 0
  cursor pointer
  float left
  font-size 0
  left 0
  margin 0
  opacity .4
  outline none
  padding 5.5px
  pointer-events none
  position absolute
  transition .3s all
