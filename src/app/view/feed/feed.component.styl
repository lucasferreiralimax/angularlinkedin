@import '../../../stylus/base/**'

.feed
  display block
  +tablet()
    width 50%
    padding 0 10px
    margin-right 20%
    float right
    box-sizing border-box
  +desktop()
    margin-right 30%
.post
  background #fff
  border 1px solid #ccc
  padding 15px 15px 0
  margin 10px
  box-shadow 0 2px 5px rgba(0,0,0,.2)
  transition .3s all
  border-radius 3px
  &:hover
    box-shadow 0 0 0 1px rgba(#fff,.5), 0 5px 10px rgba(0,0,0,.3)
    .post__photo
      color color2
      img
        box-shadow 0 0 0 1px rgba(#fff,.5), 0 5px 10px rgba(0,0,0,.3)
  p
    font-size .9em
    line-height 1.3em
    &.likes
      color #666
      font-size .8em
      clear both
      display block
.post__photo
  margin 0
  h1
    margin-bottom 5px
    transition .3s all
  img
    border-radius 100%
    float left
    margin 0 10px 10px 0
    transition .3s all
.actions
  padding-top 10px
  margin 10px 0 13px
  border-top 1px solid #eee
  .btn
    background transparent
    border 0
    color #666
    padding 8px 10px
    transition .3s all
    cursor pointer
    outline none
    border-radius 4px
    &:hover,
    &:focus
      color color2
      background rgba(color2, .1)
      svg
        fill color2
    span
      display inline-block
      transform translateY(-5px)
    svg
      transition .3s all
      fill #666
.advertising
  background #ccc
  color #fff
  padding 2px
  margin 10px
  box-sizing border-box
  +tablet()
    width 20%
    float right
    position fixed
    top 68px
    right 0
  +desktop()
    width 30%
