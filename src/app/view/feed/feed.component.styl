@import '../../../stylus/base/**'

app-aside
  padding 10px
  display flex
  +tablet()
    width 25%
    min-width 220px
    position sticky
    top 60px

+tablet()
  .container
    max-width 1300px
    margin 0 auto
    display flex
    align-items flex-start

.feed
  display block
  animation 1.5s entry_content
  +tablet()
    width 50%
.post
  animation 1.5s entry_content
  background #fff
  border 1px solid #ccc
  border-radius 3px
  box-shadow 0 2px 5px rgba(0,0,0,.2)
  margin 10px
  padding 15px 15px 5px
  transition .3s all
  &:hover
    .post__photo
      color color2
  p
    font-size .9em
    line-height 1.3em
    word-break break-word
    clear both
    &.likes
      clear both
      color color2
      display block
      font-size .8em
      margin 10px 0
.post__photo
  margin 0
  h1
    font-size: 14px
    margin-bottom 5px
    transition .3s all
  span
    font-size 12px
    color rgba(0, 0, 0, 0.6)
  img
    border-radius 100%
    float left
    margin 0 10px 10px 0
    transition .3s all
.actions
  border-top 1px solid #ccc
  margin 10px 0 0
  padding-top 10px
  .btn
    background transparent
    border 0
    border-radius 4px
    color #666
    cursor pointer
    margin-right 10px
    outline none
    padding 6px 10px
    transition .3s all
    &:hover
      color #222
      svg
        fill #222
    &.active
      color color2
      svg
        fill color2
    &:last-of-type
      margin-right 0
    span
      display inline-block
      transform translateY(-5px)
    svg
      fill #666
      transition .3s all

.advertising
  background #ccc
  border-radius 3px
  box-sizing border-box
  color #fff
  margin 0 10px 10px
  overflow hidden
  &:hover
    img
      animation 3s advertising infinite alternate
      transform scale(1.3)
  img
    display block
    transition .5s all
  +tablet()
    width 25%
    display flex
    position sticky
    top 70px
