.about
  background-color #fff
  border-radius 2px
  box-shadow 0 0 0 1px rgba(0,0,0,.15), 0 2px 3px rgba(0,0,0,.2)
  margin 16px 0
  padding 24px
  font-size 14px
  white-space pre-wrap
  line-height: 20px
  h2
    font-size 20px
    line-height 1.33333
    font-weight 600
    color rgba(0,0,0,.9)
  pre
    height 30px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    &.show
      height auto
      white-space break-spaces
      overflow initial
  button
    cursor pointer
